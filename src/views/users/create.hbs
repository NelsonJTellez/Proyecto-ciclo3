<!-- Crear -->
<div class=" justify-content-center" style="padding: 2% 10% 2%;">
	<div class="card-body" style="background-color: white; border-radius: 15px;">
		<div style="padding: 20px 20px 20px 20px;">
			<form action="/usuarios/registro" method="POST">
				<div>
					<h4>Registro de usuario</h4>
				</div>
				<div>
					<div class="form-group">
						<label>Correo electrónico </label>
						<input name="email" type="email" class="form-control" value="{{email}}" required>
					</div>
					<div class="form-group">
						<label>Nombre y apellidos</label>
						<input name="fullName" type="text" class="form-control" value="{{fullName}}" required>
					</div>
					<div class="form-group">
						<label>Contraseña</label>
						<input name="password" type="password" style="resize:none;"
							placeholder="Ingrese una mínimo de 4 caracteres y máximo de 8" class="form-control"
							required>
						</input>
					</div>
					<div class="form-group">
						<label>Confirmar la contraseña</label>
						<input name="password_confirm" type="password" class="form-control"
							placeholder="Vuelva a escribir la contraseña" required>
					</div>
				</div>
				<div class="row pt-3">
					<div class="col">
						<a href="/usuarios/iniciosesion">
							<input type="button" class="btn btn-secondary" value="Cancelar" />
						</a>
					</div>
					<div class="col flex-end">
						<input type="submit" class="btn btn-success" value="Crear">
					</div>
				</div>
			</form>
		</div>
	</div>
</div>